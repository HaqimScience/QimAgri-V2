<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HelpFragment">

    <!-- TODO: Update blank fragment layout -->


    <Button
        android:id="@+id/button_developer_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/light_chocolate"
        android:padding="10dp"
        android:fontFamily="@font/abeezee"
        android:text="Developer Info"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.262" />

    <Button
        android:id="@+id/button_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@color/light_chocolate"
        android:fontFamily="@font/abeezee"
        android:padding="10dp"
        android:text="Guide"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_developer_info"
        app:layout_constraintVertical_bias="0.039" />

    <Button
        android:id="@+id/button_key_features"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@color/light_chocolate"
        android:fontFamily="@font/abeezee"
        android:padding="10dp"
        android:text="Key Features"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_guide"
        app:layout_constraintVertical_bias="0.039" />

    <Button
        android:id="@+id/button_support_or_contact_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/light_chocolate"
        android:fontFamily="@font/abeezee"
        android:padding="10dp"
        android:text="Support or Contact Info"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_key_features"
        app:layout_constraintVertical_bias="0.087" />

</androidx.constraintlayout.widget.ConstraintLayout>